<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Slim Black Store - Estilo Minimalista</title>
    <link rel="stylesheet" href="style.css">
    <script src="https://js.stripe.com/v3/"></script>
    <style>
        body {
            box-sizing: border-box;
            font-family: Arial, sans-serif;
            margin: 0;
            background-color: #111;
            color: #fff;
            text-align: center;
            line-height: 1.6;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Header */
        .header {
            position: fixed;
            top: 0;
            width: 100%;
            background: rgba(0, 0, 0, 0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid #333;
            z-index: 1000;
        }

        .nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 0;
        }

        .logo-text {
            font-size: 1.5rem;
            color: #00ffcc;
            font-weight: bold;
            letter-spacing: 2px;
        }

        .nav-menu {
            display: flex;
            gap: 2rem;
        }

        .nav-menu a {
            color: #fff;
            text-decoration: none;
            transition: color 0.3s;
        }

        .nav-menu a:hover {
            color: #00ffcc;
        }

        .cart-icon {
            cursor: pointer;
            font-size: 1.2rem;
            padding: 0.5rem;
            border-radius: 8px;
            transition: background 0.3s;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .cart-icon:hover {
            background: #333;
        }

        /* Hero */
        .hero {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            background: linear-gradient(135deg, #000, #222);
            padding: 50px 20px;
        }

        .hero-title {
            font-size: 3em;
            margin: 0;
            color: #00ffcc;
            margin-bottom: 1rem;
        }

        .hero-subtitle {
            font-size: 1.2em;
            color: #ddd;
            margin-bottom: 2rem;
            max-width: 600px;
        }

        .text-muted {
            color: #666;
        }

        /* Buttons */
        .btn-primary {
            display: inline-block;
            background: #00ffcc;
            color: #000;
            padding: 1rem 2rem;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-primary:hover {
            background: #00e6b8;
            transform: translateY(-2px);
        }

        .btn-secondary {
            display: inline-block;
            background: transparent;
            color: #00ffcc;
            padding: 1rem 2rem;
            border: 2px solid #00ffcc;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-secondary:hover {
            background: #00ffcc;
            color: #000;
        }

        /* Sections */
        .products, .about, .contact {
            padding: 40px 20px;
        }

        .section-title {
            color: #00ffcc;
            font-size: 2.5rem;
            text-align: center;
            margin-bottom: 3rem;
        }

        /* Products Grid */
        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
        }

        .product-card {
            background: #222;
            border-radius: 12px;
            overflow: hidden;
            transition: transform 0.3s;
        }

        .product-card:hover {
            transform: translateY(-5px);
        }

        .product-image {
            width: 100%;
            height: 250px;
            object-fit: cover;
            background: #333;
        }

        .product-info {
            padding: 1.5rem;
        }

        .product-name {
            font-size: 1.3rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #00ffcc;
        }

        .product-description {
            color: #ddd;
            margin-bottom: 1rem;
        }

        .product-price {
            font-size: 1.5rem;
            font-weight: 700;
            color: #fff;
            margin-bottom: 1rem;
        }

        .add-to-cart {
            width: 100%;
            background: #00ffcc;
            color: #000;
            border: none;
            padding: 0.8rem;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
        }

        .add-to-cart:hover {
            background: #00e6b8;
        }

        /* About */
        .about {
            background: #111;
        }

        .about-text {
            max-width: 600px;
            margin: 0 auto;
            text-align: center;
            font-size: 1.1rem;
            color: #ddd;
        }

        /* Contact */
        .contact-buttons {
            display: flex;
            justify-content: center;
            gap: 1rem;
        }

        /* Cart Sidebar */
        .cart-sidebar {
            position: fixed;
            top: 0;
            right: -400px;
            width: 400px;
            height: 100vh;
            background: #222;
            border-left: 1px solid #333;
            z-index: 2000;
            transition: right 0.3s;
            display: flex;
            flex-direction: column;
        }

        .cart-sidebar.open {
            right: 0;
        }

        .cart-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem;
            border-bottom: 1px solid #333;
        }

        .cart-header h3 {
            color: #00ffcc;
        }

        .close-btn {
            background: none;
            border: none;
            color: #fff;
            font-size: 1.5rem;
            cursor: pointer;
        }

        .cart-items {
            flex: 1;
            padding: 1rem;
            overflow-y: auto;
        }

        .cart-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem;
            background: #333;
            border-radius: 8px;
            margin-bottom: 1rem;
        }

        .cart-item-info h4 {
            margin-bottom: 0.5rem;
            color: #00ffcc;
        }

        .cart-item-info p {
            color: #ddd;
            font-size: 0.9rem;
        }

        .quantity-controls {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-top: 0.5rem;
        }

        .quantity-btn {
            background: #00ffcc;
            border: none;
            color: #000;
            width: 30px;
            height: 30px;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
        }

        .cart-footer {
            padding: 1rem;
            border-top: 1px solid #333;
        }

        .cart-total {
            font-size: 1.2rem;
            font-weight: 700;
            margin-bottom: 1rem;
            text-align: center;
            color: #00ffcc;
        }

        .btn-checkout {
            width: 100%;
            background: #00ffcc;
            color: #000;
            border: none;
            padding: 1rem;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
        }

        .btn-checkout:hover {
            background: #00e6b8;
        }

        .btn-checkout:disabled {
            background: #333;
            color: #666;
            cursor: not-allowed;
        }

        /* Overlay */
        .cart-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1500;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s;
        }

        .cart-overlay.active {
            opacity: 1;
            visibility: visible;
        }

        /* Loading */
        .loading {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 3000;
        }

        .loading-spinner {
            width: 50px;
            height: 50px;
            border: 3px solid #333;
            border-top: 3px solid #00ffcc;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-bottom: 1rem;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .hidden {
            display: none !important;
        }

        /* Footer */
        .footer {
            background: #000;
            padding: 20px;
            font-size: 0.9em;
            color: #aaa;
            text-align: center;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .hero-title {
                font-size: 2.5em;
            }
            
            .section-title {
                font-size: 2rem;
            }
            
            .nav-menu {
                display: none;
            }
            
            .cart-sidebar {
                width: 100%;
                right: -100%;
            }
            
            .contact-buttons {
                flex-direction: column;
                align-items: center;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <div class="nav">
                <div class="logo">
                    <span class="logo-text">SLIM BLACK</span>
                </div>
                <nav class="nav-menu">
                    <a href="#home">Home</a>
                    <a href="#loja">Loja</a>
                    <a href="#sobre">Sobre</a>
                    <a href="#contato">Contato</a>
                </nav>
                <div class="cart-icon" onclick="toggleCart()">
                    🛒 <span id="cart-count">0</span>
                </div>
            </div>
        </div>
    </header>

    <!-- Hero Section -->
    <section id="home" class="hero">
        <div class="container">
            <h1 class="hero-title">
                SLIM BLACK
            </h1>
            <p class="hero-subtitle">A marca que une estilo, atitude e autenticidade</p>
            <a href="#loja" class="btn-primary">Explorar Coleção</a>
        </div>
    </section>

    <!-- Produtos -->
    <section id="loja" class="products">
        <div class="container">
            <h2 class="section-title">Nossa <span class="text-muted">Coleção</span></h2>
            <div class="products-grid" id="products-grid">
                <!-- Produtos serão carregados via JavaScript -->
            </div>
        </div>
    </section>

    <!-- Sobre -->
    <section id="sobre" class="about">
        <div class="container">
            <h2 class="section-title">Sobre <span class="text-muted">Nós</span></h2>
            <p class="about-text">
                Na Slim Black acreditamos que moda é identidade. Criamos roupas e acessórios unissex 
                para quem quer se destacar com elegância e simplicidade. Nossa filosofia é criar 
                peças atemporais que se adaptam ao seu estilo de vida.
            </p>
        </div>
    </section>

    <!-- Contato -->
    <section id="contato" class="contact">
        <div class="container">
            <h2 class="section-title">Entre em <span class="text-muted">Contato</span></h2>
            <div class="contact-buttons">
                <a href="https://wa.me/5511999999999" class="btn-primary" target="_blank" rel="noopener noreferrer">WhatsApp</a>
                <a href="https://instagram.com/slimblack" class="btn-secondary" target="_blank" rel="noopener noreferrer">Instagram</a>
            </div>
        </div>
    </section>

    <!-- Carrinho Lateral -->
    <div id="cart-sidebar" class="cart-sidebar">
        <div class="cart-header">
            <h3>Carrinho</h3>
            <button onclick="toggleCart()" class="close-btn">×</button>
        </div>
        <div id="cart-items" class="cart-items">
            <!-- Itens do carrinho -->
        </div>
        <div class="cart-footer">
            <div class="cart-total">
                Total: R$ <span id="cart-total">0,00</span>
            </div>
            <button id="checkout-btn" class="btn-checkout" onclick="checkout()">
                Finalizar Compra
            </button>
        </div>
    </div>

    <!-- Overlay -->
    <div id="cart-overlay" class="cart-overlay" onclick="toggleCart()"></div>

    <!-- Loading -->
    <div id="loading" class="loading hidden">
        <div class="loading-spinner"></div>
        <p>Processando pagamento...</p>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>© 2025 Slim Black | Todos os direitos reservados.</p>
        </div>
    </footer>

    <script>
        // Configuração do Stripe - SUBSTITUA pela sua chave pública
        const stripe = Stripe('pk_test_SUA_CHAVE_PUBLICA_AQUI');

        // Dados dos produtos
        const products = [
            {
                id: 1,
                name: "Camiseta Premium",
                description: "Conforto e estilo em uma peça única",
                price: 149.90,
                image: "camiseta.jpg"
            },
            {
                id: 2,
                name: "Acessórios Slim",
                description: "Complete seu look com nossos acessórios",
                price: 79.90,
                image: "acessorio.jpg"
            },
            {
                id: 3,
                name: "Tênis Slim Black",
                description: "Performance e design em cada passo",
                price: 299.90,
                image: "tenis.jpg"
            }
        ];

        // Estado do carrinho
        let cart = JSON.parse(localStorage.getItem('slimblack-cart')) || [];

        // Inicialização
        document.addEventListener('DOMContentLoaded', function() {
            renderProducts();
            updateCartUI();
            
            // Smooth scroll para links de navegação
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });
        });

        // Renderizar produtos
        function renderProducts() {
            const grid = document.getElementById('products-grid');
            grid.innerHTML = products.map(product => `
                <div class="product-card">
                    <div class="product-image" style="background: #333; display: flex; align-items: center; justify-content: center; color: #666;">
                        Imagem em breve
                    </div>
                    <div class="product-info">
                        <h3 class="product-name">${product.name}</h3>
                        <p class="product-description">${product.description}</p>
                        <div class="product-price">R$ ${product.price.toFixed(2).replace('.', ',')}</div>
                        <button class="add-to-cart" onclick="addToCart(${product.id})">
                            Adicionar ao Carrinho
                        </button>
                    </div>
                </div>
            `).join('');
        }

        // Adicionar ao carrinho
        function addToCart(productId) {
            const product = products.find(p => p.id === productId);
            const existingItem = cart.find(item => item.id === productId);
            
            if (existingItem) {
                existingItem.quantity += 1;
            } else {
                cart.push({
                    ...product,
                    quantity: 1
                });
            }
            
            saveCart();
            updateCartUI();
            
            // Feedback visual
            const button = event.target;
            const originalText = button.textContent;
            button.textContent = 'Adicionado!';
            button.style.background = '#10b981';
            
            setTimeout(() => {
                button.textContent = originalText;
                button.style.background = '#fff';
            }, 1000);
        }

        // Remover do carrinho
        function removeFromCart(productId) {
            cart = cart.filter(item => item.id !== productId);
            saveCart();
            updateCartUI();
        }

        // Atualizar quantidade
        function updateQuantity(productId, change) {
            const item = cart.find(item => item.id === productId);
            if (item) {
                item.quantity += change;
                if (item.quantity <= 0) {
                    removeFromCart(productId);
                } else {
                    saveCart();
                    updateCartUI();
                }
            }
        }

        // Salvar carrinho no localStorage
        function saveCart() {
            localStorage.setItem('slimblack-cart', JSON.stringify(cart));
        }

        // Atualizar interface do carrinho
        function updateCartUI() {
            const cartCount = document.getElementById('cart-count');
            const cartItems = document.getElementById('cart-items');
            const cartTotal = document.getElementById('cart-total');
            const checkoutBtn = document.getElementById('checkout-btn');
            
            // Contador
            const totalItems = cart.reduce((sum, item) => sum + item.quantity, 0);
            cartCount.textContent = totalItems;
            
            // Itens do carrinho
            if (cart.length === 0) {
                cartItems.innerHTML = '<p style="text-align: center; color: #666; padding: 2rem;">Carrinho vazio</p>';
                checkoutBtn.disabled = true;
            } else {
                cartItems.innerHTML = cart.map(item => `
                    <div class="cart-item">
                        <div class="cart-item-info">
                            <h4>${item.name}</h4>
                            <p>R$ ${item.price.toFixed(2).replace('.', ',')} x ${item.quantity}</p>
                            <div class="quantity-controls">
                                <button class="quantity-btn" onclick="updateQuantity(${item.id}, -1)">-</button>
                                <span>${item.quantity}</span>
                                <button class="quantity-btn" onclick="updateQuantity(${item.id}, 1)">+</button>
                                <button class="quantity-btn" onclick="removeFromCart(${item.id})" 
                                        style="background: #dc2626; margin-left: 0.5rem;">×</button>
                            </div>
                        </div>
                        <div class="cart-item-price">
                            R$ ${(item.price * item.quantity).toFixed(2).replace('.', ',')}
                        </div>
                    </div>
                `).join('');
                checkoutBtn.disabled = false;
            }
            
            // Total
            const total = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
            cartTotal.textContent = total.toFixed(2).replace('.', ',');
        }

        // Toggle carrinho
        function toggleCart() {
            const sidebar = document.getElementById('cart-sidebar');
            const overlay = document.getElementById('cart-overlay');
            
            sidebar.classList.toggle('open');
            overlay.classList.toggle('active');
        }

        // Checkout (versão demo)
        function checkout() {
            if (cart.length === 0) return;
            
            const loading = document.getElementById('loading');
            loading.classList.remove('hidden');
            
            // Simular processamento de pagamento
            setTimeout(() => {
                loading.classList.add('hidden');
                alert('🎉 Compra realizada com sucesso!\n\nEste é um demo. Para pagamentos reais, configure o Stripe com sua chave de API.');
                cart = [];
                saveCart();
                updateCartUI();
                toggleCart();
            }, 2000);
        }

        // Fechar carrinho com ESC
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                const sidebar = document.getElementById('cart-sidebar');
                const overlay = document.getElementById('cart-overlay');
                
                if (sidebar.classList.contains('open')) {
                    sidebar.classList.remove('open');
                    overlay.classList.remove('active');
                }
            }
        });
    </script>
